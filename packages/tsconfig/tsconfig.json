{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"outDir": "dist"
	},
	"include": ["src"]
}
